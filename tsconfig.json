{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "declaration": true,               // Generates .d.ts files for types
    "outDir": "./dist",                // Output directory for compiled files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
